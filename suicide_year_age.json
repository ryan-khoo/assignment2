{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "title": {"text": "Overview of Suicide Cases (1985 - 2016)", "anchor": "middle", "subtitle": "by Gender and Ages", "fontSize": 17, "fontWeight":200},
  "data": {"url": "https://ryan-khoo.github.io/assignment2/suicides_year_age.csv"},

  "params": [
    {
      "name": "years",
      "value": 1985,
      "bind": {
        "input": "range",
        "min": 1985,
        "max": 2016,
        "step": 1,
        "name": "Year:"
      }
    }
  ],

  "transform": [
    {"filter": "datum.Year == years"}
  ],

  "spacing": 5,
  "hconcat": [{
    "transform": [{
      "filter": {"field": "Sex", "equal": "Female"}
    }],
    "title": "Female",
    "mark": "bar",
    "encoding": {
      "y": {
        "field": "Age", "axis": null, "sort": "descending"
      },
      "x": {
        "aggregate":"sum", "field": "Suicides_no",
        "title": "No. of Suicide cases",
        "axis": {"format": "s"},
        "sort": "descending"
      },
      "color": {
        "field": "Sex",
        "scale": {"range": ["#675193", "#ca8861"]},
        "legend": null
      },
      "tooltip": [
        {"field": "Suicides_no", "type": "quantitative", "title": "No. of cases"}
      ]
    }
  }, {
    "width": 20,
    "view": {"stroke": null},
    "mark": {
      "type": "text",
      "align": "center"
    },
    "encoding": {
      "y": {"field": "Age", "type": "ordinal", "axis": null, "sort": "descending"},
      "text": {"field": "Age", "type": "ordinal"}
    }
  }, 
  
  {
    "transform": [{
      "filter": {"field": "Sex", "equal": "Male"}
    }],
    "title": "Male",
    "mark": "bar",
    "encoding": {
      "y": {
        "field": "Age",
        "axis": null, "sort": "descending"
      },
      "x": {
        "aggregate": "sum", "field": "Suicides_no",
        "title":"No. of Suicide cases",
        "axis": {"format": "s"}
      },
      "color": {
        "field": "Sex",
        "legend": null
      },
      "tooltip": [
        {"field": "Suicides_no", "type": "quantitative", "title": "No. of cases"}
      ]
    }
  }],

  "config": {
    "view": {"stroke": null},
    "axis": {"grid": false}
  }
}