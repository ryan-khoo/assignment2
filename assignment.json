{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "title": "Suicide Rates Overview",
  "width": 800,
  "height": 600,
  "data": {
    "url": "https://ryan-khoo.github.io/assignment2/master.csv",
  },
  "transform": [
    {"filter": "datum.year == 2000"}
  ],
  "height" : {"step": 20},
  "mark": "bar",
  "encoding": {
    "y":{
      "field": "sex",
      "type": "ordinal",
      "sort": "-x"
    },
    "x": {
      "aggregate": "sum",
      "field": "suicides_no",
      "title": "Suicide cases"
    },
    
    // "tooltip": [
    //   {"field": "properties.NAME", "type": "nominal", "title": "Country"},
    //   {"field": "Active", "type": "quantitative"}
    // ]
  }
}