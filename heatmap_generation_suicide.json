{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "title": "Sum of Suicide Cases from Different Generations",
  "data": {"url": "https://ryan-khoo.github.io/assignment2/master_edit.csv"},
  "config": {
      "view": {
          "step": 15
      },
      "axis": {
          "domain": false
      }
  },
  "mark": "rect",
  "width": 700, "height": 150,
  "params": [
    {
      "name": "generation_selection",
      "bind": {
        "input": "select",
        "options": [
          null,
          "Boomers",
          "G.I. Generation",
          "Generation X",
          "Generation Z",
          "Millenials",
          "Silent"
        ],
        "labels": [
          "Show All",
          "Boomers",
          "G.I. Generation",
          "Generation X",
          "Generation Z",
          "Millenials",
          "Silent"
        ],
        "name": "Select generation: "
      }
    }
  ],

  "transform": [{"impute": "color", "key": "year", "value":0, "groupby": ["generation"]}, {
    "joinaggregate": [{
      "op": "sum",
      "field": "suicides_no",
      "as": "sum_suicides"
    }],
    "groupby": ["year", "generation"]
  },
  {"filter":"generation_selection == null || datum.generation == generation_selection"}
  
  ],
  "encoding": {
    "x": {
      "field": "year",
      "timeUnit": "year",
      "type": "ordinal",
      "title": "Year"
    },
    "y": {
      "field": "generation",
      "type": "ordinal",
      "title": "Generations"
    },
    "color": {
      "field": "suicides_no",
      "aggregate": "sum",
      "type": "quantitative",
      "legend": { "title": null}
    },
    "tooltip": [
      {"field": "sum_suicides", "type": "quantitative", "format": ","}
    ]
  }
}


