{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
  "title": "Suicide Rates Overview",
  "width": 700,
  "height": 500,
  
  "transform": [
    {"filter": "datum.year == 2000"}
  ],
  "height" : {"step": 20},
  "mark": "bar",
  "encoding": {
    "y":{
      "field": "sex",
      "type": "ordinal",
      "sort": "-x"
    },
    "x": {
      "aggregate": "sum",
      "field": "suicides_no",
      "title": "Suicide cases"
    }
  }
}
